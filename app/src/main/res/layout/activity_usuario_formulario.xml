<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.UsuarioFormularioActivity">

  <EditText
    android:id="@+id/activity_formulario_usuario_edittext_nome"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:autofillHints=""
    android:hint="Nome"
    android:inputType="text"
    android:minHeight="48dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/activity_formulario_usuario_edittext_email"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="E-mail"
    android:inputType="textEmailAddress"
    android:minHeight="48dp"
    app:layout_constraintEnd_toEndOf="@id/activity_formulario_usuario_edittext_nome"
    app:layout_constraintStart_toStartOf="@id/activity_formulario_usuario_edittext_nome"
    app:layout_constraintTop_toBottomOf="@id/activity_formulario_usuario_edittext_nome" />

  <EditText
    android:id="@+id/activity_formulario_usuario_edittext_login"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Login"
    android:inputType="text"
    android:minHeight="48dp"
    app:layout_constraintEnd_toEndOf="@id/activity_formulario_usuario_edittext_email"
    app:layout_constraintStart_toStartOf="@id/activity_formulario_usuario_edittext_email"
    app:layout_constraintTop_toBottomOf="@id/activity_formulario_usuario_edittext_email" />

  <Button
    android:id="@+id/activity_formulario_usuario_botao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="Salvar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>